<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Edit Hotel</title>

  <% include ../partials/header %>


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Dashboard
        <small>Welcome!</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

      <!--------------------------
        | Your Page Content Here |
        -------------------------->

          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Add New</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form method="post">
              <div class="box-body">

                <div class="form-group">
                  <label>Hotel Name</label>
                  <input type="text" class="form-control" id="hotel-title" placeholder="Hotel Name" name="hotel_title" value="<%=result.title%>">
                </div>
                <div class="form-group">
                  <label>Hotel Location</label>
                  <input type="text" class="form-control" id="hotel-location" placeholder="Hotel Name" name="hotel_location" value="<%=result.location%>">
                </div>
                <div class="form-group">
                  <label>Hotel Description</label>
                  <textarea class="form-control" rows="3" id="hotel-desc" placeholder="Hotel Description" name="hotel_desc"><%=result.hotel_desc%></textarea>
                </div>

                <div class="error">
                <% if(message != null){ %>
                <p><span id="error"><%= message %></span></p>
                <% } %>
                </div>	

                <button type="submit" class="btn btn-primary">UPDATE</button>
              </div>
            </form>
          </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->