<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>All Hotels</title>

<% include ../partials/header %>
<% include ../partials/admin-sidebar %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Dashboard
        <small>Welcome!</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

      <!--------------------------
        | Your Page Content Here |
        -------------------------->

          <div class="box">
            <div class="box-header">
              <h3 class="box-title">All Hotels</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tr>
                  <th>ID</th>
                  <th>Hotel Name</th>
                  <th>Location</th>
                  <th>Description</th>
                  <th>Last Modified By</th>
                  <th>Action</th>
                </tr>
                    <% for(var i=0; i < List.length; i++){ %>
                      <tr>
                        <td><%= List[i].hotel_id %></td>
                        <td><%= List[i].title %></td>
                        <td><%= List[i].location %></td>
                        <td width="50%"><%= List[i].hotel_desc %></td>
                        <td><%= List[i].last_modified %></td>
                        <td>
                          <a href="/viewhotels/edit/<%= List[i].hotel_id %>">Edit</a> |
                          <a href="/viewhotels/delete/<%= List[i].hotel_id %>">Delete</a> 
                        </td>
                      </tr>
                      <% } %>

              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->